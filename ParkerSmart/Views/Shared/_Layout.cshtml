@using ParkerSmart.Models
@using ParkerSmart.Utilities
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>@Constants.APPLICATION_NAME - @ViewBag.Title</title>

	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

	<link rel="icon" type="image/png" href="@Constants.WEBSITE_URL/images/favicon.png">
</head>

<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="@Url.Action("Index", "Home")">
					@*<span style="font-size: x-large">Zρ<span class="text-flip-horizontal">Z</span></span>*@
					<div style="position: relative; width: 0; height: 0">
						<img src="~/Images/PDS Logo 64x64 alpha.png" style="position: absolute; left: -5px; top: -7px; height: 40px;" />
					</div>
				</a>
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("Home", "Index", "Home")</li>
					<li>@Html.ActionLink("Work", "Work", "Home")</li>
					<li>@Html.ActionLink("Play", "Play", "Home")</li>
					<li>@Html.ActionLink("About", "About", "Home")</li>
					<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
				</ul>
			</div>
		</div>
	</div>

	@*Having the container-fluid will make the content rearrange better on a phone.*@

	<div class="body-content container-fluid">
		@RenderBody()
	</div>

	<footer>
		<div class="body-content container-fluid">
			<div class="row row-divider"> </div>

			<div class="row">
				<div class="col-md-10 col-md-offset-1">
					<div class="col-sm-6">
						&copy; @ViewUtility.CopyrightDates() - @Html.ActionLink("Parker Smart", "Contact", "Home")
					</div>
					<div class="col-sm-3">
						<a class="twitter-share-button"
						   href="https://twitter.com/intent/tweet">
							Tweet
						</a>
					</div>
					<div class="col-sm-3">
						<a class="twitter-follow-button"
						   href="https://twitter.com/SpilledMilkCOM"
						   data-show-count="true">
							Follow @@SpilledMilkCOM
						</a>
					</div>
				</div>
			</div>
		</div>
	</footer>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@*Making sure that the script bundle is brought into EACH page.*@
	@Scripts.Render("~/bundles/parkersmart")

	@RenderSection("scripts", required: false)
</body>
</html>
